meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: /auth/login
  body: application/json
}

auth {
  mode: none
}

body {
  type: json
  raw: {
  "email": "user@example.com",
  "password": "password123"
}
}

script {
  res: {
    // Store the access token for future requests
    if (res.status === 200) {
      const data = res.body;
      bru.setVar("access_token", data.access_token);
    }
  }
}